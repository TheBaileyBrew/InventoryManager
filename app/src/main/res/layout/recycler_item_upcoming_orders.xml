<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    android:elevation="8dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Motorola MC3200"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/ordered_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentStart="true"
            tools:text="Ordered: Oct, 12 2018"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/expected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@id/ordered_date"
            tools:text="Expected: Oct, 17 2018"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/quantity_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/item_type"
            android:layout_marginEnd="24dp"
            tools:text="30"
            android:textSize="18sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>