<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/arc_holder"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/arc_color_key"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="28dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Motorola MC3200"
                android:textColor="@color/colorArrayOne"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Unitech HT682"
                android:textColor="@color/colorArrayTwo"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Zebra TC71"
                android:textColor="@color/colorArrayThree"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Apple iPhone"
                android:textColor="@color/colorArrayFour"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Unitech PA710"
                android:textColor="@color/colorArrayFive"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/arc_color_key"
            app:layout_constraintStart_toEndOf="@id/arc_color_key">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="13"
                android:textColor="@color/colorArrayOne"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="26"
                android:textColor="@color/colorArrayTwo"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="37"
                android:textColor="@color/colorArrayThree"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="12"
                android:textColor="@color/colorArrayFour"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/colorArrayFive"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"/>
        </LinearLayout>
        <com.thebaileybrew.inventorymanager.objects.ArcProgressStackView
            android:id="@+id/arc_view_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:apsv_preview_colors="@array/arc_colors"
            app:apsv_shadow_radius="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/arc_holder"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcoming_inventory_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>